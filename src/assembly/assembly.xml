<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.1.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.1.1 http://maven.apache.org/xsd/assembly-2.1.1.xsd">
  <id>${arch.name}${static.suffix}${debug.suffix}</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <files>
    <file>
      <source>${project.basedir}/src/main/c/api/CMakeLists${static.suffix}.txt</source>
      <outputDirectory/>
      <destName>CMakeLists.txt</destName>
    </file>
  </files>
  <fileSets>
    <fileSet>
      <directory>${native.image.path}</directory>
      <includes>
        <include>*.dylib</include>
        <include>*.dll</include>
        <include>*.so</include>
        <include>*.h</include>
        <include>*.lib</include>
        <include>*.o</include>
        <include>*.a</include>
        <include>*.pdb</include>
      </includes>
      <excludes>
        <exclude>${native.image.name}.h</exclude>
        <exclude>${native.image.name}_dynamic.h</exclude>
      </excludes>
      <outputDirectory/>
    </fileSet>
    <fileSet>
      <directory>${native.image.path}/reports</directory>
      <includes>
        <include>*.txt</include>
      </includes>
      <outputDirectory>docs</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/src/main/c/api</directory>
      <excludes>
        <exclude>.idea/**</exclude>
        <exclude>cmake-**/**</exclude>
        <exclude>*.txt</exclude>
      </excludes>
      <outputDirectory/>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}/docs</directory>
      <includes>
        <include>changelog.txt</include>
        <include>${project.name}-version.inc</include>
      </includes>
      <outputDirectory>docs</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}</directory>
      <includes>
        <include>LICENSE</include>
      </includes>
      <outputDirectory/>
    </fileSet>
  </fileSets>
</assembly>
